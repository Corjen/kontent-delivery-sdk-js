{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "paths": {
      "rxjs": [
        "./node_modules/rxjs"
      ]
    }
  },
  "include": [
    "lib/**/*",
    "test-browser/**/*",
    "test-node/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}