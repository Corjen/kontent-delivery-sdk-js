{
  "name": "kentico-cloud-tracking",
  "version": "1.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Enngage/kentico-cloud-js/tree/master/packages/tracking"
  },
  "private": false,
  "author": "richard sustek",
  "license": "MIT",
  "description": "Official Kentico Cloud Tracking SDK",
  "keywords": [
    "Kentico",
    "Kentico API",
    "Kentico Javascript",
    "Kentico SDK",
    "Kentico Tracking",
    "Kentico Tracking API",
    "Kentico Tracking SDK"
  ],
  "engines": {
    "node": ">= 8"
  },
  "main": "./_commonjs/index.js",
  "types": "./_commonjs/index.d.ts",
  "scripts": {
    "test:node": "npm run build:commonjs && mocha \"test-node/**/*.js\"",
    "test:browser": "karma start karma.conf.js",
    "test:dev": "karma start karma-dev.conf.js",
    "test:travis": "karma start karma-travis.conf.js",
    "test:all": "npm run test:node && npm run test:travis",
    "new-patch": "npm version patch && npm run set-sdk-version && npm run check-version",
    "new-minor": "npm version minor && npm run set-sdk-version && npm run check-version",
    "new-major": "npm version major && npm run set-sdk-version && npm run check-version",
    "prepublishOnly": "npm run set-sdk-version && npm run check-version && npm run build:all && npm run test:all",
    "set-sdk-version": "node ./misc/set-sdk-version.js",
    "check-version": "ts-node ./misc/check-publish-version.ts",
    "webpack:dev": "webpack --mode development --config webpack.config.js --progress --colors",
    "webpack:prod": "webpack --mode production --config webpack.config.js --progress --colors",
    "publish:beta": "npm publish --tag=next",
    "build:umd": "npm run webpack:dev && npm run webpack:prod",
    "build:es2015": "tsc -m es2015 --outDir _es2015 --p tsconfig.prod.json",
    "build:commonjs": "tsc -m commonjs --outDir _commonjs --p tsconfig.prod.json",
    "build:all": "npm run build:umd && npm run build:es2015 && npm run build:commonjs"
  },
  "dependencies": {
    "kentico-cloud-core": "0.0.1"
  },
  "peerDependencies": {
    "rxjs": "^6.2.0"
  },
  "devDependencies": {
    "rxjs": "^6.2.0",
    "@types/jasmine": "2.8.8",
    "@types/node": "10.5.8",
    "colors": "1.3.1",
    "core-js": "2.5.7",
    "jasmine-core": "3.2.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "3.0.0",
    "karma-cli": "1.0.1",
    "karma-coverage": "1.1.2",
    "karma-coverage-istanbul-reporter": "2.0.1",
    "karma-firefox-launcher": "1.1.0",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.2.0",
    "karma-sourcemap-loader": "0.3.7",
    "karma-typescript": "3.0.13",
    "karma-typescript-es6-transform": "1.0.4",
    "karma-webpack": "3.0.0",
    "lcov-parse": "1.0.0",
    "mocha": "5.2.0",
    "ts-loader": "4.4.2",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typescript": "3.0.1",
    "url-parse": "1.4.3",
    "webpack": "4.16.5",
    "webpack-cli": "3.1.0"
  }
}
