{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "paths": {
      "rxjs": [
        "./node_modules/rxjs"
      ]
    },
  },
  "include": [
    "lib/**/*",
    "test-node/**/*",
    "test-browser/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}